import testing ;
import ../../config/checks/config : requires ;

local SOURCES =
    assign_string.cpp
    assign_vector.cpp
    basic_parser.cpp
    block_storage.cpp
    error.cpp
    json.cpp
    kind.cpp
    number.cpp
    parser.cpp
    serializer.cpp
    storage.cpp
    storage_ptr.cpp
    value.cpp
    ryu/d2s_intrinsics_test.cpp
    ryu/d2s_table_test.cpp
    ryu/d2s_test.cpp
    ;

local MOD_SOURCES =
    array.cpp
    object.cpp
    string.cpp
    ;

local RUN_TESTS ;

for local f in $(SOURCES)
{
    RUN_TESTS += [
        run $(f) main.cpp : : :
            <library>/boost/json//boost_json
        ] ;
}

for local f in $(MOD_SOURCES)
{
    RUN_TESTS += [
        run $(f) main.cpp ../src/src.cpp : : :
            <define>BOOST_JSON_MAX_STRING_SIZE=1000
            <define>BOOST_JSON_MAX_OBJECT_SIZE=30
            <define>BOOST_JSON_MAX_ARRAY_SIZE=100
        ] ;
}

alias run-tests : $(RUN_TESTS) ;
